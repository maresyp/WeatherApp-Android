<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:layout_marginStart="5dp">

    <TextView
        android:id="@+id/item_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_temperature_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        app:layout_constraintTop_toBottomOf="@id/item_time_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_pressure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        app:layout_constraintTop_toBottomOf="@id/item_temperature_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_element_desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/item_pressure_text_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_element_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_time_text_view"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>